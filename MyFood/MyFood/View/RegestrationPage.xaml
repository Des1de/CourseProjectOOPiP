<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFood.View.RegestrationPage"
             Title="RegestrationPage"
             BackgroundColor="White"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             xmlns:viewmodel="clr-namespace:MyFood.ViewModel"
             x:DataType="viewmodel:RegestrationViewModel">
    <Page.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="Black"
                               StatusBarStyle="Default"></mct:StatusBarBehavior>
    </Page.Behaviors>
    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            
            <Label Text="Регистрация" 
                   Grid.Row ="0"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   TextColor="Black"
                   FontSize="32"
                   BackgroundColor="White"
                   >
            </Label>
            <Picker Title="Тип аккаунта"
                    TextColor="Black"
                    FontSize="24"
                    WidthRequest="250"
                    HorizontalOptions="Start"
                    TitleColor="Black"
                    FontAttributes="Bold"
                    BackgroundColor="White">
                <Picker.Items>
                    <x:String>Клиент</x:String>
                    <x:String>Ресторан</x:String>
                </Picker.Items>
            </Picker>
            <Entry Placeholder="Логин"
                   FontSize="24"
                   MaxLength="16"
                   Grid.Row="1"
                   HorizontalOptions="Start"
                   PlaceholderColor="Black"
                   FontAttributes="Bold"
                   WidthRequest="250"
                   TextColor="Black">
            </Entry>
            <Entry Placeholder="Пароль"
                   IsPassword="True"
                   FontSize="24"
                   MaxLength="16"
                   Grid.Row="1"
                   HorizontalOptions="Start"
                   PlaceholderColor="Black"
                   FontAttributes="Bold"
                   WidthRequest="250"
                   TextColor="Black">
            </Entry>
            <Entry Placeholder="Повторите пароль"
                   IsPassword="True"
                   FontSize="24"
                   MaxLength="16"
                   Grid.Row="1"
                   HorizontalOptions="Start"
                   PlaceholderColor="Black"
                   FontAttributes="Bold"
                   WidthRequest="250"
                   TextColor="Black">
            </Entry>
            
            <Entry Placeholder="Фамилия"
                   FontSize="24"
                   MaxLength="16"
                   Grid.Row="1"
                   HorizontalOptions="Start"
                   PlaceholderColor="Black"
                   FontAttributes="Bold"
                   WidthRequest="250"
                   TextColor="Black">
            </Entry>
            <Entry Placeholder="Имя"
                   FontSize="24"
                   MaxLength="16"
                   Grid.Row="1"
                   HorizontalOptions="Start"
                   PlaceholderColor="Black"
                   FontAttributes="Bold"
                   WidthRequest="250"
                   TextColor="Black">
            </Entry>
            <Entry Placeholder="номер телефона"
                   FontSize="24"
                   MaxLength="13"
                   Keyboard="Telephone"
                   Grid.Row="1"
                   HorizontalOptions="Start"
                   PlaceholderColor="Black"
                   FontAttributes="Bold"
                   WidthRequest="250"
                   TextColor="Black">
            </Entry>
            
            <Entry Placeholder="Адрес"
                   FontSize="24"
                   MaxLength="16"
                   Grid.Row="1"
                   HorizontalOptions="Start"
                   PlaceholderColor="Black"
                   FontAttributes="Bold"
                   WidthRequest="250"
                   TextColor="Black">
            </Entry>
            <Button Grid.Row="3"
           
                Text="Зарегистрироваться"
                BorderWidth="3"
                WidthRequest="250"
                HeightRequest="50"
                TextColor="Black"
                FontSize="20"
                BackgroundColor ="White"
                BorderColor="Black"
                >

            </Button>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>